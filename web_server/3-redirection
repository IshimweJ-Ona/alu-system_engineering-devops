#!/usr/bin/env bash
# Script to configure Nginx on Ubuntu with a 301 redirect for /redirect_me

set -e

# Update package list and install Nginx
apt-get update -y
apt-get install -y nginx

# Reset default Nginx configuration to a known good state
cat <<'EOF' > /etc/nginx/sites-available/default
server {
    listen 80 default_server;
    listen [::]:80 default_server;

    root /var/www/html;
    index index.html index.htm index.nginx-debian.html;

    server_name _;

    location / {
        try_files $uri $uri/ =404;
    }
}
EOF

# Ensure symlink exists
ln -sf /etc/nginx/sites-available/default /etc/nginx/sites-enabled/default

# Add /redirect_me redirect if it does not already exist
if ! grep -q "location /redirect_me" /etc/nginx/sites-available/default; then
    awk '{
        print
        if ($0 ~ /server_name _;/) {
            print "    location /redirect_me {"
            print "        return 301 https://www.youtube.com/watch?v=QH2-TGUlwu4;"
            print "    }"
        }
    }' /etc/nginx/sites-available/default > /tmp/default && mv /tmp/default /etc/nginx/sites-available/default
fi

# Test Nginx configuration
nginx -t

# Restart Nginx without using systemctl
service nginx restart
