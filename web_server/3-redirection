#!/usr/bin/env bash
# Script to configure Nginx with a 301 redirect safely
# Installs Nginx, listens on port 80, and adds /redirect_me 301 redirect

# Update and install nginx
apt-get update -y
apt-get install -y nginx

# Configure nginx to listen on port 80
sed -i 's/listen [0-9]* default_server;/listen 80 default_server;/g' /etc/nginx/sites-enabled/default
sed -i 's/listen \[::\]:[0-9]* default_server;/listen [::]:80 default_server;/g' /etc/nginx/sites-enabled/default

# Add redirect to /redirect_me only if it doesn't exist
if ! grep -q "location /redirect_me" /etc/nginx/sites-enabled/default; then
    awk '{
        print
        if ($0 ~ /server_name _;/) {
            print "    location /redirect_me {"
            print "        return 301 https://www.youtube.com/watch?v=QH2-TGUlwu4;"
            print "    }"
        }
    }' /etc/nginx/sites-enabled/default > /tmp/default && mv /tmp/default /etc/nginx/sites-enabled/default
fi

# Test nginx configuration
nginx -t

# Restart nginx
service nginx restart
