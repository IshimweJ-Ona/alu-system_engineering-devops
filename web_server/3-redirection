#!/usr/bin/env bash
# Install Nginx and add /redirect_me redirect
set -e

# Install nginx
apt-get update -y
apt-get install -y nginx

# Ensure default config exists and listens on port 80
cat <<'EOF' > /etc/nginx/sites-available/default
server {
    listen 80 default_server;
    listen [::]:80 default_server;

    root /var/www/html;
    index index.html index.htm index.nginx-debian.html;

    server_name _;

    location / {
        try_files $uri $uri/ =404;
    }
}
EOF

ln -sf /etc/nginx/sites-available/default /etc/nginx/sites-enabled/default

# Add redirect block if it doesn't exist
if ! grep -q "location /redirect_me" /etc/nginx/sites-available/default; then
    awk '{
        print
        if ($0 ~ /server_name _;/) {
            print "    location /redirect_me {"
            print "        return 301 https://www.youtube.com/watch?v=QH2-TGUlwu4;"
            print "    }"
        }
    }' /etc/nginx/sites-available/default > /tmp/default && mv /tmp/default /etc/nginx/sites-available/default
fi

# Test config and restart
nginx -t
service nginx restart
