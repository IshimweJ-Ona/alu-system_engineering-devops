#!/usr/bin/env bash
# Script to configure Nginx with a 301 redirect

# Update and install nginx
apt-get update -y
apt-get install -y nginx

# Configure nginx to listen on port 80
sed -i 's/listen [0-9]* default_server;/listen 80 default_server;/g' /etc/nginx/sites-enabled/default
sed -i 's/listen \[::\]:[0-9]* default_server;/listen [::]:80 default_server;/g' /etc/nginx/sites-enabled/default

# Add redirect to /redirect_me
# This will insert the redirect inside the server block
sed -i '/server_name _;/a \\tlocation /redirect_me {\n\t\treturn 301 https://www.youtube.com/watch?v=QH2-TGUlwu4;\n\t}' /etc/nginx/sites-enabled/default

# Restart nginx (without systemctl)
service nginx restart

