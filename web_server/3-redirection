#!/usr/bin/env bash
# Script to configure Nginx on a sandbox with a 301 redirect for /redirect_me
# Installs Nginx, ensures port 80, safely adds /redirect_me redirect

set -e  # Exit immediately if a command fails

# Install Nginx (if not already installed)
apt-get update -y
apt-get install -y nginx

# Ensure Nginx listens on port 80
sed -i 's/listen [0-9]* default_server;/listen 80 default_server;/g' /etc/nginx/sites-enabled/default
sed -i 's/listen \[::\]:[0-9]* default_server;/listen [::]:80 default_server;/g' /etc/nginx/sites-enabled/default

# Remove any existing /redirect_me location to avoid duplicates
sed -i '/location \/redirect_me {/,/}/d' /etc/nginx/sites-enabled/default || true

# Add /redirect_me location safely
awk '{
    print
    if ($0 ~ /server_name _;/) {
        print "    location /redirect_me {"
        print "        return 301 https://www.youtube.com/watch?v=QH2-TGUlwu4;"
        print "    }"
    }
}' /etc/nginx/sites-enabled/default > /tmp/default && mv /tmp/default /etc/nginx/sites-enabled/default

# Test Nginx configuration
nginx -t || { echo "Nginx configuration test failed"; exit 1; }

# Restart Nginx (without systemctl)
service nginx restart

# Verify locally
echo "Test locally with:"
echo "curl -sI http://127.0.0.1/redirect_me"

